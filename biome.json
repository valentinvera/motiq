{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!**/dist",
      "!**/.turbo",
      "!**/.zed",
      "!**/dev-dist",
      "!**/routeTree.gen.ts",
      "!**/.source",
      "!!bun.lock"
    ]
  },
  "extends": ["ultracite/biome/core", "ultracite/biome/react"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "nursery": {
        "noUndeclaredEnvVars": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      }
    }
  }
}
