{
  "name": "motiq",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "dev:web": "turbo -F @motiq/web dev",
    "dev:api": "turbo -F @motiq/api dev",
    "check-types": "turbo check-types",
    "check": "bunx ultracite check",
    "fix": "bunx ultracite fix",
    "doctor": "bunx ultracite doctor",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@motiq/env": "workspace:*",
    "dotenv": "^17.3.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@motiq/ts-config": "workspace:*",
    "@types/bun": "catalog:",
    "lefthook": "2.0.15",
    "turbo": "2.7.4",
    "typescript": "catalog:",
    "ultracite": "7.0.11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.9.3",
      "tsdown": "0.20.0-beta.3",
      "zod": "4.3.5",
      "@trpc/server": "11.8.1",
      "@trpc/client": "11.8.1",
      "hono": "4.11.4",
      "better-auth": "1.4.12",
      "@polar-sh/better-auth": "1.6.4",
      "@t3-oss/env-core": "0.13.10",
      "@types/bun": "1.3.6",
      "superjson": "2.2.6"
    }
  },
  "engines": {
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.6"
}
