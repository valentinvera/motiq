{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "daemon": true,
  "concurrency": "4",
  "globalDependencies": ["**/package.json", "**/.env*", "bun.lock"],
  "globalEnv": [],
  "globalPassThroughEnv": [],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only",
      "passThroughEnv": []
    },
    "@motiq/api#build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["api/**"],
      "outputLogs": "new-only",
      "passThroughEnv": [
        "PORT",
        "CORS_ORIGIN",
        "GOOGLE_GENERATIVE_AI_API_KEY",
        "POLAR_ACCESS_TOKEN",
        "POLAR_PRODUCT_ID",
        "POLAR_SUCCESS_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "DATABASE_URL",
        "RESEND_API_KEY",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^topo"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"],
      "outputLogs": "errors-only"
    },
    "//#check": {},
    "//#fix": {
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^topo"],
      "inputs": ["**/*.{ts,tsx}"],
      "outputLogs": "errors-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "db:push": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "db:generate": {
      "cache": false,
      "persistent": true,
      "interactive": true
    }
  }
}
